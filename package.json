    "@types/koa-static": "^4.0.1",
    "@types/morgan": "^1.7.35",
    "@types/node": "^9.4.6",
    "@types/nodemailer": "^4.3.4",
    "@types/supertest": "^2.0.4",
    "@types/winston": "^2.3.7",
    "@types/xml2js": "^0.4.3",
    "chai": "^4.1.2",
